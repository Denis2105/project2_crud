
<div class = "dealTitle">

  </div>

  <div class = "deals">
      <% @deals.each do |deal| %>

        <div class = "dealImage">

          <img src="<%= deal['image_url'] %>" alt="">

        </div>

        <div class = "dealDescription">

          <h2><%= deal['name'] %></h2>

          <p><%= deal.description %></p>

          <a href= "/deals/<%= deal['id'] %>">details</a>

        </div>

        <hr>

      <% end %>
      
  </div>

</div>
