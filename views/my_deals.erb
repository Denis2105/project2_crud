<h1>My deals</h1>

<% @deals.each do |deal| %>

<div class = "dealImage">
  <img src="<%= deal.image_url %>" alt="">
</div>

<div class = "dealDescription">

  <h2><%= deal.name %></h2>

  <p><%= deal.description %></p>

  <a href="/deals/<%= deal['id'].to_i %>/edit"><button>Edit</button></a>

</div>

<hr>

<% end %>
